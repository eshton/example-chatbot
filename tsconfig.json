{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.json",
  ],
  "exclude": [
    "node_modules"
  ]
}